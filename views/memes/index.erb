
<h2><%= @page_header %></h2>

<a href="/memes/new">Upload a video</a>
	
<% @vids.each do |vids| %>

	<hr>

	<a id="vidtit" href="memes/<%= vids.id %>"<h2><%= vids.title %></h2></a>
	<p> <%= vids.description %></p>

	<iframe width="560" height="315" src="<%= vids.url %>" frameborder="0" allowfullscreen></iframe>


	

	<form action="/memes/<%= vids.id %>" method="POST">
		<input class="button" type="hidden" name="_method" value="DELETE">
		<input class="button" type="submit" value="DELETE">
	</form>

	<a class="button2" href="memes/<%= vids.id %>/edit">EDIT</a> 

	</hr>

<% end %>


